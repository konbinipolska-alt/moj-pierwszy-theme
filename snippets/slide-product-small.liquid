{% comment %}
  Product Slide Small - 9:16 aspect ratio
{% endcomment %}

{% if block.settings.product %}
  <a href="{{ block.settings.product.url }}" class="slide-link">
    <div class="slide-small" style="display: flex; flex-direction: column; background: white; border-radius: 8px; overflow: hidden;">
      {% if block.settings.product.featured_image %}
        <div class="product-image">
          {{ block.settings.product.featured_image | image_url: width: 1920 | image_tag: 
            loading: 'lazy',
            alt: block.settings.product.title,
            class: 'product-img'
          }}
        </div>
      {% endif %}
      
      <div class="product-info">
        <h3 class="product-title">{{ block.settings.product.title }}</h3>
        {% if block.settings.product.price %}
          <div class="product-price">{{ block.settings.product.price | money }}</div>
        {% endif %}
      </div>
    </div>
  </a>
{% else %}
  <div class="slide-small" style="display: flex; flex-direction: column; background: white; border-radius: 8px; overflow: hidden;">
    <div class="slide-empty">
      <div class="empty-icon">üõçÔ∏è</div>
      <div class="empty-text">No product selected</div>
    </div>
  </div>
{% endif %}

