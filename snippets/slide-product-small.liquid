{% comment %}
  Product Slide Small Snippet
  Renders a small product slide (9:16 aspect ratio)
{% endcomment %}

{% if block.settings.product %}
  <a href="{{ block.settings.product.url }}" class="slide-link">
    <div class="slide-small">
      {% if block.settings.product.featured_image %}
        <div class="product-image">
          {{ block.settings.product.featured_image | image_url: width: 1920 | image_tag: 
            loading: 'lazy',
            alt: block.settings.product.title,
            class: 'product-img'
          }}
        </div>
      {% endif %}
      
      <div class="product-info">
        <h3 class="product-title">{{ block.settings.product.title }}</h3>
        {% if block.settings.product.price %}
          <div class="product-price">
            {{ block.settings.product.price | money }}
          </div>
        {% endif %}
      </div>
    </div>
  </a>
{% else %}
  {% comment %} Empty state - no product provided {% endcomment %}
  <div class="slide-small">
    <div class="slide-color empty-state" style="background-color: #eeeeee;">
      <div class="slide-content">
        <div class="empty-state-icon">üõçÔ∏è</div>
        <div class="empty-state-text">No product selected</div>
        <div class="empty-state-subtext">Add a product in the theme editor</div>
      </div>
    </div>
  </div>
{% endif %}

<style>
  .slide-small {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    background: white;
    border-radius: 8px;
    overflow: hidden;
  }

  .product-image {
    flex: 1;
    position: relative;
    overflow: hidden;
  }

  .product-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .product-info {
    padding: 12px;
    background: white;
    border-top: 1px solid #e9ecef;
  }

  .product-title {
    font-size: 14px;
    font-weight: bold;
    margin-bottom: 6px;
    color: #333;
    line-height: 1.3;
  }

  .product-price {
    font-size: 12px;
    font-weight: 600;
    color: #007bff;
  }

  .slide-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .slide-link:hover {
    text-decoration: none;
  }

  .slide-link:hover .product-title {
    color: #007bff;
  }
  
  /* Empty state styles */
  .empty-state {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #666;
  }
  
  .empty-state-icon {
    font-size: 32px;
    margin-bottom: 12px;
    opacity: 0.5;
  }
  
  .empty-state-text {
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 6px;
  }
  
  .empty-state-subtext {
    font-size: 12px;
    opacity: 0.7;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .product-info {
      padding: 10px;
    }
    
    .product-title {
      font-size: 12px;
    }
    
    .product-price {
      font-size: 10px;
    }
    
    .empty-state-icon {
      font-size: 28px;
    }
    
    .empty-state-text {
      font-size: 12px;
    }
    
    .empty-state-subtext {
      font-size: 10px;
    }
  }

  @media (max-width: 768px) {
    .product-info {
      padding: 8px;
    }
    
    .product-title {
      font-size: 11px;
    }
    
    .product-price {
      font-size: 9px;
    }
    
    .empty-state-icon {
      font-size: 24px;
    }
    
    .empty-state-text {
      font-size: 11px;
    }
    
    .empty-state-subtext {
      font-size: 9px;
    }
  }
</style>
