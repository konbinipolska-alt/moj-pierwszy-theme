{% comment %}
  Video Slide Small - 9:16 aspect ratio
{% endcomment %}

{% if block.settings.link %}
  <a href="{{ block.settings.link }}" class="slide-link">
{% endif %}

<div class="slide-small">
  {% if block.settings.video_url %}
    <div class="slide-video">
      {{ block.settings.video_url | video_tag: 
        autoplay: true,
        loop: true,
        muted: true,
        controls: false,
        class: 'slide-video-element'
      }}
    </div>
  {% else %}
    <div class="slide-empty">
      <div class="empty-icon">ðŸŽ¥</div>
      <div class="empty-text">No video selected</div>
    </div>
  {% endif %}
</div>

{% if block.settings.link %}
  </a>
{% endif %}

<style>
  .slide-video {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
  }

  .slide-video-element {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .slide-empty {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #eeeeee;
    color: #666;
    text-align: center;
  }

  .empty-icon {
    font-size: 32px;
    margin-bottom: 8px;
    opacity: 0.5;
  }

  .empty-text {
    font-size: 14px;
    font-weight: 500;
  }

  .slide-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .slide-link:hover {
    text-decoration: none;
  }
</style>
