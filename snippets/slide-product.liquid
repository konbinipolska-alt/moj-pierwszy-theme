{% comment %}
  Product Slide Snippet
  Renders a product slide with product image and info
{% endcomment %}

{% if block.settings.product %}
  <a href="{{ block.settings.product.url }}" class="slide-link">
    <div class="slide-product">
      {% if block.settings.custom_image %}
        <div class="product-image">
          {{ block.settings.custom_image | image_url: width: 1920 | image_tag: 
            loading: 'lazy',
            alt: block.settings.product.title,
            class: 'product-img'
          }}
        </div>
      {% elsif block.settings.product.featured_image %}
        <div class="product-image">
          {{ block.settings.product.featured_image | image_url: width: 1920 | image_tag: 
            loading: 'lazy',
            alt: block.settings.product.title,
            class: 'product-img'
          }}
        </div>
      {% endif %}
      
      <div class="product-info">
        <h3 class="product-title">{{ block.settings.product.title }}</h3>
        {% if block.settings.product.price %}
          <div class="product-price">
            {{ block.settings.product.price | money }}
          </div>
        {% endif %}
      </div>
    </div>
  </a>
{% else %}
  {% comment %} Fallback to gray color if no product {% endcomment %}
  {% assign gray_percentage = forloop.index | times: 10 %}
  {% assign slide_color = '#eeeeee' %}
  
  <div class="slide-color" style="background-color: {{ slide_color }};">
    <div class="slide-content">
      <div class="slide-caption">Product {{ forloop.index }}</div>
    </div>
  </div>
{% endif %}

<style>
  .slide-product {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    background: white;
    border-radius: 8px;
    overflow: hidden;
  }

  .product-image {
    flex: 1;
    position: relative;
    overflow: hidden;
  }

  .product-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .product-info {
    padding: 20px;
    background: white;
    border-top: 1px solid #e9ecef;
  }

  .product-title {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 8px;
    color: #333;
    line-height: 1.3;
  }

  .product-price {
    font-size: 16px;
    font-weight: 600;
    color: #007bff;
  }

  .slide-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .slide-link:hover {
    text-decoration: none;
  }

  .slide-link:hover .product-title {
    color: #007bff;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .product-info {
      padding: 15px;
    }
    
    .product-title {
      font-size: 16px;
    }
    
    .product-price {
      font-size: 14px;
    }
  }

  @media (max-width: 768px) {
    .product-info {
      padding: 12px;
    }
    
    .product-title {
      font-size: 14px;
    }
    
    .product-price {
      font-size: 12px;
    }
  }
</style>
