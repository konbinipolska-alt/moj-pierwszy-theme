{% comment %}
  Product Slide - 9:16 aspect ratio
{% endcomment %}

{% if block.settings.product %}
  <a href="{{ block.settings.product.url }}" class="slide-link">
    <div class="slide slide-product">
      {% if block.settings.product.featured_image %}
        <div class="product-image">
          {{ block.settings.product.featured_image | image_url: width: 1920 | image_tag: 
            loading: 'lazy',
            alt: block.settings.product.title,
            class: 'product-img'
          }}
        </div>
      {% endif %}
      
      <div class="product-info">
        <h3 class="product-title">{{ block.settings.product.title }}</h3>
        {% if block.settings.product.price %}
          <div class="product-price">{{ block.settings.product.price | money }}</div>
        {% endif %}
      </div>
    </div>
  </a>
{% else %}
  <div class="slide slide-product">
    <div class="slide-placeholder">
      <div class="placeholder-icon">üõçÔ∏è</div>
      <div class="placeholder-text">No product selected</div>
      <div class="placeholder-subtext">Add a product to display here</div>
    </div>
  </div>
{% endif %}

<style>
  .slide-product {
    width: calc((600px * 9) / 16); /* 337.5px - 9:16 aspect ratio */
    height: 600px;
    flex-shrink: 0;
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    background: white;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .product-image {
    flex: 1;
    position: relative;
    overflow: hidden;
  }

  .product-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .product-info {
    padding: 16px;
    background: white;
    border-top: 1px solid #e9ecef;
  }

  .product-title {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 8px;
    color: #333;
    line-height: 1.3;
  }

  .product-price {
    font-size: 14px;
    font-weight: 600;
    color: #007bff;
  }

  .slide-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #eeeeee;
    color: #666;
    text-align: center;
    padding: 20px;
  }

  .placeholder-icon {
    font-size: 48px;
    margin-bottom: 16px;
    opacity: 0.5;
  }

  .placeholder-text {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 8px;
  }

  .placeholder-subtext {
    font-size: 14px;
    opacity: 0.7;
  }

  .slide-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .slide-link:hover {
    text-decoration: none;
  }

  .slide-link:hover .product-title {
    color: #007bff;
  }

  /* Tablet responsive */
  @media (max-width: 1024px) {
    .slide-product {
      width: calc((500px * 9) / 16); /* 281.25px */
      height: 500px;
    }

    .product-info {
      padding: 12px;
    }

    .product-title {
      font-size: 14px;
    }

    .product-price {
      font-size: 12px;
    }
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .slide-product {
      width: calc((400px * 9) / 16); /* 225px */
      height: 400px;
    }

    .product-info {
      padding: 10px;
    }

    .product-title {
      font-size: 12px;
    }

    .product-price {
      font-size: 10px;
    }
  }
</style>