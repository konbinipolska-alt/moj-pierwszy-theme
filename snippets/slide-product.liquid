{% comment %}
  Product Slide - 9:16 aspect ratio
{% endcomment %}

{% if block.settings.product %}
  <a href="{{ block.settings.product.url }}" class="slide-link">
    <div class="slide slide-product">
      {% if block.settings.product.featured_image %}
        <div class="product-image">
          {{ block.settings.product.featured_image | image_url: width: 1920 | image_tag: 
            loading: 'lazy',
            alt: block.settings.product.title,
            class: 'product-img'
          }}
        </div>
      {% endif %}
      
      <div class="product-info">
        <h3 class="product-title">{{ block.settings.product.title }}</h3>
        {% if block.settings.product.price %}
          <div class="product-price">{{ block.settings.product.price | money }}</div>
        {% endif %}
      </div>
    </div>
  </a>
{% else %}
  <div class="slide slide-product">
    <div class="slide-placeholder">
      <div class="placeholder-icon">üõçÔ∏è</div>
      <div class="placeholder-text">No product selected</div>
      <div class="placeholder-subtext">Add a product to display here</div>
    </div>
  </div>
{% endif %}