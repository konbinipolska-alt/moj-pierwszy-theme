{% comment %}
  Text Slide Small - 9:16 aspect ratio
{% endcomment %}

{% if block.settings.link %}
  <a href="{{ block.settings.link }}" class="slide-link">
{% endif %}

<div class="slide-small" style="background-color: {{ block.settings.background_color }}; color: {{ block.settings.text_color }}; display: flex; align-items: center; justify-content: center; padding: 20px; text-align: center;">
  {% if block.settings.heading != blank or block.settings.text != blank %}
    <div class="slide-content">
      {% if block.settings.heading != blank %}
        <h2 class="slide-heading">{{ block.settings.heading }}</h2>
      {% endif %}
      {% if block.settings.text != blank %}
        <div class="slide-text">{{ block.settings.text }}</div>
      {% endif %}
    </div>
  {% else %}
    <div class="slide-empty">
      <div class="empty-icon">ğŸ“</div>
      <div class="empty-text">No content added</div>
    </div>
  {% endif %}
</div>

{% if block.settings.link %}
  </a>
{% endif %}

