{% comment %}
  Text Slide Small Snippet
  Renders a small text slide (9:16 aspect ratio)
{% endcomment %}

{% if block.settings.link %}
  <a href="{{ block.settings.link }}" class="slide-link">
{% endif %}

<div class="slide-small" style="background-color: {{ block.settings.background_color }}; color: {{ block.settings.text_color }};">
  <div class="slide-text-content">
    {% if block.settings.heading != blank or block.settings.text != blank %}
      {% if block.settings.heading != blank %}
        <h2 class="slide-heading">{{ block.settings.heading }}</h2>
      {% endif %}
      
      {% if block.settings.text != blank %}
        <div class="slide-text-body">
          {{ block.settings.text }}
        </div>
      {% endif %}
    {% else %}
      {% comment %} Empty state - no content {% endcomment %}
      <div class="empty-state">
        <div class="empty-state-icon">üìù</div>
        <div class="empty-state-text">No content added</div>
        <div class="empty-state-subtext">Add heading and text in the theme editor</div>
      </div>
    {% endif %}
  </div>
</div>

{% if block.settings.link %}
  </a>
{% endif %}

<style>
  .slide-small {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    text-align: center;
  }

  .slide-text-content {
    max-width: 100%;
  }

  .slide-heading {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 12px;
    line-height: 1.2;
  }

  .slide-text-body {
    font-size: 14px;
    line-height: 1.6;
  }

  .slide-text-body p {
    margin-bottom: 10px;
  }

  .slide-text-body p:last-child {
    margin-bottom: 0;
  }

  .slide-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .slide-link:hover {
    text-decoration: none;
  }
  
  /* Empty state styles */
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #666;
    opacity: 0.7;
  }
  
  .empty-state-icon {
    font-size: 32px;
    margin-bottom: 12px;
    opacity: 0.5;
  }
  
  .empty-state-text {
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 6px;
  }
  
  .empty-state-subtext {
    font-size: 12px;
    opacity: 0.7;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .slide-small {
      padding: 15px;
    }
    
    .slide-heading {
      font-size: 20px;
    }
    
    .slide-text-body {
      font-size: 12px;
    }
    
    .empty-state-icon {
      font-size: 28px;
    }
    
    .empty-state-text {
      font-size: 12px;
    }
    
    .empty-state-subtext {
      font-size: 10px;
    }
  }

  @media (max-width: 768px) {
    .slide-small {
      padding: 12px;
    }
    
    .slide-heading {
      font-size: 18px;
    }
    
    .slide-text-body {
      font-size: 11px;
    }
    
    .empty-state-icon {
      font-size: 24px;
    }
    
    .empty-state-text {
      font-size: 11px;
    }
    
    .empty-state-subtext {
      font-size: 9px;
    }
  }
</style>
