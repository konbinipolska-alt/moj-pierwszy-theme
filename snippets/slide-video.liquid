{% comment %}
  Video Slide Snippet
  Renders a video slide with optional link
{% endcomment %}

{% if block.settings.link %}
  <a href="{{ block.settings.link }}" class="slide-link">
{% endif %}

{% if block.settings.video %}
  <div class="slide-video">
    {{ block.settings.video | video_tag: 
      autoplay: true,
      loop: true,
      muted: true,
      controls: false,
      class: 'slide-video-element'
    }}
  </div>
{% else %}
  {% comment %} Empty state - no video provided {% endcomment %}
  <div class="slide-color empty-state" style="background-color: #eeeeee;">
    <div class="slide-content">
      <div class="empty-state-icon">ðŸŽ¥</div>
      <div class="empty-state-text">No video selected</div>
      <div class="empty-state-subtext">Add a video URL in the theme editor</div>
    </div>
  </div>
{% endif %}

{% if block.settings.link %}
  </a>
{% endif %}

<style>
  .slide-video {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
  }

  .slide-video-element {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .slide-color {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .slide-content {
    text-align: center;
    color: white;
    z-index: 2;
  }

  .slide-caption {
    font-size: 48px;
    font-weight: bold;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  }

  .slide-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .slide-link:hover {
    text-decoration: none;
  }
  
  /* Empty state styles */
  .empty-state {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #666;
  }
  
  .empty-state-icon {
    font-size: 48px;
    margin-bottom: 16px;
    opacity: 0.5;
  }
  
  .empty-state-text {
    font-size: 18px;
    font-weight: 500;
    margin-bottom: 8px;
  }
  
  .empty-state-subtext {
    font-size: 14px;
    opacity: 0.7;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .slide-caption {
      font-size: 40px;
    }
    
    .empty-state-icon {
      font-size: 36px;
    }
    
    .empty-state-text {
      font-size: 16px;
    }
    
    .empty-state-subtext {
      font-size: 12px;
    }
  }

  @media (max-width: 768px) {
    .slide-caption {
      font-size: 32px;
    }
    
    .empty-state-icon {
      font-size: 28px;
    }
    
    .empty-state-text {
      font-size: 14px;
    }
    
    .empty-state-subtext {
      font-size: 11px;
    }
  }
</style>
