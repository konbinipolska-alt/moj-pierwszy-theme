{% comment %}
  Video Slide - 9:16 aspect ratio
{% endcomment %}

{% if block.settings.link %}
  <a href="{{ block.settings.link }}" class="slide-link">
{% endif %}

<div class="slide slide-video">
  {% if block.settings.video_url %}
    <div class="slide-video-content">
      {{ block.settings.video_url | video_tag: 
        autoplay: true,
        loop: true,
        muted: true,
        controls: false,
        class: 'slide-video-element'
      }}
    </div>
  {% else %}
    <div class="slide-placeholder">
      <div class="placeholder-icon">ðŸŽ¥</div>
      <div class="placeholder-text">No video selected</div>
      <div class="placeholder-subtext">Add a video URL to display here</div>
    </div>
  {% endif %}
</div>

{% if block.settings.link %}
  </a>
{% endif %}
