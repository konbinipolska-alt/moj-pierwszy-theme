{% comment %}
  Image Slide Snippet
  Renders an image slide with optional link
{% endcomment %}

{% if block.settings.link %}
  <a href="{{ block.settings.link }}" class="slide-link">
{% endif %}

{% if block.settings.image %}
  <div class="slide-image">
    {{ block.settings.image | image_url: width: 1920 | image_tag: 
      loading: 'lazy',
      alt: block.settings.alt_text | default: 'Slider image',
      class: 'slide-img'
    }}
  </div>
{% else %}
  {% comment %} Auto-assign gray scale color based on block index {% endcomment %}
  {% assign gray_percentage = forloop.index | times: 10 %}
  {% assign slide_color = 'rgb(' | append: gray_percentage | append: '%, ' | append: gray_percentage | append: '%, ' | append: gray_percentage | append: '%)' %}
  
  <div class="slide-color" style="background-color: {{ slide_color }};">
    <div class="slide-content">
      <div class="slide-caption">{{ forloop.index }}</div>
    </div>
  </div>
{% endif %}

{% if block.settings.link %}
  </a>
{% endif %}

<style>
  .slide-image {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
  }

  .slide-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .slide-color {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .slide-content {
    text-align: center;
    color: white;
    z-index: 2;
  }

  .slide-caption {
    font-size: 48px;
    font-weight: bold;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  }

  .slide-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .slide-link:hover {
    text-decoration: none;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .slide-caption {
      font-size: 40px;
    }
  }

  @media (max-width: 768px) {
    .slide-caption {
      font-size: 32px;
    }
  }
</style>
