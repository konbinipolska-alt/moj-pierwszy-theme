{% comment %}
  Image Slide Medium Snippet
  Renders a medium image slide (2x small + 12px gap)
{% endcomment %}

{% if block.settings.link %}
  <a href="{{ block.settings.link }}" class="slide-link">
{% endif %}

<div class="slide-medium">
  {% if block.settings.image %}
    <div class="slide-image">
      {{ block.settings.image | image_url: width: 1920 | image_tag: 
        loading: 'lazy',
        alt: block.settings.alt_text | default: 'Medium slider image',
        class: 'slide-img'
      }}
    </div>
  {% else %}
    {% comment %} Empty state - no image provided {% endcomment %}
    <div class="slide-color empty-state" style="background-color: #eeeeee;">
      <div class="slide-content">
        <div class="empty-state-icon">ðŸ“·</div>
        <div class="empty-state-text">No image selected</div>
        <div class="empty-state-subtext">Add an image in the theme editor</div>
      </div>
    </div>
  {% endif %}
</div>

{% if block.settings.link %}
  </a>
{% endif %}

<style>
  .slide-image {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
  }

  .slide-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .slide-color {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .slide-content {
    text-align: center;
    color: white;
    z-index: 2;
  }

  .slide-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .slide-link:hover {
    text-decoration: none;
  }
  
  /* Empty state styles */
  .empty-state {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #666;
  }
  
  .empty-state-icon {
    font-size: 48px;
    margin-bottom: 16px;
    opacity: 0.5;
  }
  
  .empty-state-text {
    font-size: 18px;
    font-weight: 500;
    margin-bottom: 8px;
  }
  
  .empty-state-subtext {
    font-size: 14px;
    opacity: 0.7;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .empty-state-icon {
      font-size: 36px;
    }
    
    .empty-state-text {
      font-size: 16px;
    }
    
    .empty-state-subtext {
      font-size: 12px;
    }
  }

  @media (max-width: 768px) {
    .empty-state-icon {
      font-size: 28px;
    }
    
    .empty-state-text {
      font-size: 14px;
    }
    
    .empty-state-subtext {
      font-size: 11px;
    }
  }
</style>
