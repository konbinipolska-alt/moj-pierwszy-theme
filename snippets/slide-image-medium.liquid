{% comment %}
  Image Slide Medium - 2x small + 12px gap
{% endcomment %}

{% if block.settings.link %}
  <a href="{{ block.settings.link }}" class="slide-link">
{% endif %}

<div class="slide-medium">
  {% if block.settings.image %}
    <div class="slide-image">
      {{ block.settings.image | image_url: width: 1920 | image_tag: 
        loading: 'lazy',
        alt: block.settings.alt_text | default: 'Medium image slide',
        class: 'slide-img'
      }}
    </div>
  {% else %}
    <div class="slide-empty">
      <div class="empty-icon">ðŸ“·</div>
      <div class="empty-text">No image selected</div>
    </div>
  {% endif %}
</div>

{% if block.settings.link %}
  </a>
{% endif %}

