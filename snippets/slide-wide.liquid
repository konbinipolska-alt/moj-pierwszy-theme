{% comment %}
  Wide Slide Snippet
  Renders a wide slide that takes up 2 normal slide widths plus gap
{% endcomment %}

{% if block.settings.link %}
  <a href="{{ block.settings.link }}" class="slide-link">
{% endif %}

<div class="slide wide-slide">
  {% if block.settings.image %}
    <div class="slide-image">
      {{ block.settings.image | image_url: width: 1920 | image_tag:
        loading: 'lazy',
        alt: block.settings.image.alt | default: 'Wide slide image',
        class: 'slide-img'
      }}
    </div>
    
    {% if block.settings.heading != blank or block.settings.text != blank %}
      <div class="slide-overlay">
        <div class="slide-content">
          {% if block.settings.heading != blank %}
            <h2 class="slide-heading">{{ block.settings.heading }}</h2>
          {% endif %}
          
          {% if block.settings.text != blank %}
            <div class="slide-text">{{ block.settings.text }}</div>
          {% endif %}
        </div>
      </div>
    {% endif %}
  {% else %}
    {% comment %} Fallback to background color {% endcomment %}
    <div class="slide-color" style="background-color: {{ block.settings.background_color }}; color: {{ block.settings.text_color }};">
      <div class="slide-content">
        {% if block.settings.heading != blank %}
          <h2 class="slide-heading">{{ block.settings.heading }}</h2>
        {% endif %}
        
        {% if block.settings.text != blank %}
          <div class="slide-text">{{ block.settings.text }}</div>
        {% endif %}
      </div>
    </div>
  {% endif %}
</div>

{% if block.settings.link %}
  </a>
{% endif %}

<style>
  .wide-slide {
    position: relative;
  }
  
  .slide-image {
    width: 100%;
    height: 100%;
    position: relative;
  }
  
  .slide-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .slide-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(0,0,0,0.3), rgba(0,0,0,0.1));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }
  
  .slide-color {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px;
    text-align: center;
  }
  
  .slide-content {
    max-width: 80%;
  }
  
  .slide-heading {
    font-size: 48px;
    font-weight: bold;
    margin-bottom: 20px;
    line-height: 1.2;
  }
  
  .slide-text {
    font-size: 20px;
    line-height: 1.6;
  }
  
  .slide-text p {
    margin-bottom: 15px;
  }
  
  .slide-text p:last-child {
    margin-bottom: 0;
  }
  
  .slide-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }
  
  .slide-link:hover {
    text-decoration: none;
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .slide-color {
      padding: 30px;
    }
    
    .slide-heading {
      font-size: 36px;
    }
    
    .slide-text {
      font-size: 18px;
    }
  }
  
  @media (max-width: 768px) {
    .slide-color {
      padding: 20px;
    }
    
    .slide-heading {
      font-size: 28px;
    }
    
    .slide-text {
      font-size: 16px;
    }
  }
</style>
