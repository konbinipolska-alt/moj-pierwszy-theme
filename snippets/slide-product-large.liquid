{% comment %}
  Product Slide Large - 3x small + 24px gap
{% endcomment %}

{% if block.settings.product %}
  <a href="{{ block.settings.product.url }}" class="slide-link">
    <div class="slide-large">
      {% if block.settings.product.featured_image %}
        <div class="product-image">
          {{ block.settings.product.featured_image | image_url: width: 1920 | image_tag: 
            loading: 'lazy',
            alt: block.settings.product.title,
            class: 'product-img'
          }}
        </div>
      {% endif %}
      
      <div class="product-info">
        <h3 class="product-title">{{ block.settings.product.title }}</h3>
        {% if block.settings.product.price %}
          <div class="product-price">{{ block.settings.product.price | money }}</div>
        {% endif %}
      </div>
    </div>
  </a>
{% else %}
  <div class="slide-large">
    <div class="slide-empty">
      <div class="empty-icon">üõçÔ∏è</div>
      <div class="empty-text">No product selected</div>
    </div>
  </div>
{% endif %}

<style>
  .slide-large {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    background: white;
    border-radius: 8px;
    overflow: hidden;
  }

  .product-image {
    flex: 1;
    position: relative;
    overflow: hidden;
  }

  .product-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .product-info {
    padding: 30px;
    background: white;
    border-top: 1px solid #e9ecef;
  }

  .product-title {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 12px;
    color: #333;
    line-height: 1.3;
  }

  .product-price {
    font-size: 20px;
    font-weight: 600;
    color: #007bff;
  }

  .slide-empty {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #eeeeee;
    color: #666;
    text-align: center;
  }

  .empty-icon {
    font-size: 64px;
    margin-bottom: 16px;
    opacity: 0.5;
  }

  .empty-text {
    font-size: 24px;
    font-weight: 500;
  }

  .slide-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .slide-link:hover {
    text-decoration: none;
  }

  .slide-link:hover .product-title {
    color: #007bff;
  }
</style>
