{% comment %}
  Image Slide Small - 9:16 aspect ratio
{% endcomment %}

{% if block.settings.link %}
  <a href="{{ block.settings.link }}" class="slide-link">
{% endif %}

<div class="slide-small">
  {% if block.settings.image %}
    <div class="slide-image">
      {{ block.settings.image | image_url: width: 1920 | image_tag: 
        loading: 'lazy',
        alt: block.settings.alt_text | default: 'Small image slide',
        class: 'slide-img'
      }}
    </div>
  {% else %}
    <div class="slide-empty">
      <div class="empty-icon">ðŸ“·</div>
      <div class="empty-text">No image selected</div>
    </div>
  {% endif %}
</div>

{% if block.settings.link %}
  </a>
{% endif %}

<style>
  .slide-image {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
  }

  .slide-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .slide-empty {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #eeeeee;
    color: #666;
    text-align: center;
  }

  .empty-icon {
    font-size: 32px;
    margin-bottom: 8px;
    opacity: 0.5;
  }

  .empty-text {
    font-size: 14px;
    font-weight: 500;
  }

  .slide-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .slide-link:hover {
    text-decoration: none;
  }
</style>
