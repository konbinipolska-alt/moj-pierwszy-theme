  {% else %}
    .kafelki-section {
      background-image: url("data:image/svg+xml;base64,PHN2ZyB3aWR0aD0nMjAnIGhlaWdodD0nMjAnIHhtbG5zPSdodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2Zyc+PGxpbmUgeDE9JzAnIHkxPScwJyB4Mj0nMjAnIHkyPScwJyBzdHJva2U9JyMwYjAwYjUnIHN0cm9rZS13aWR0aD0nMicvPjxsaW5lIHgxPScwJyB5MT0nMCcgeDI9JzAnIHkyPScyMCcgc3Ryb2tlPScjMGIwMGI1JyBzdHJva2Utd2lkdGg9JzInLz48L3N2Zz4=");
    }
  {% endif %}
</style>

{% schema %}
{
  "name": "Kafelki",
  "settings": [
    {
      "type": "number",
      "id": "rows",
      "label": "Ilość rzędów",
      "default": 1
    },
    {
      "type": "range",
      "id": "stroke_width",
      "label": "Grubość linii (px)",
      "min": 1,
      "max": 2,
      "step": 0.5,
      "default": 1
    }
  ],
  "presets": [
    {
      "name": "Kafelki"
    }
  ]
}
{% endschema %}

