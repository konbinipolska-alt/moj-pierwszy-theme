<div class="kafelki-section"></div>

<style>
  .kafelki-section {
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    height: calc({{ section.settings.rows | default: 1 | times: 20 }}px + 1px);
    overflow: hidden;
    background-position: -1px 0;
    background-repeat: repeat;
  }
  
  {% assign stroke_width = section.settings.stroke_width | default: 1 %}
  
  {% if stroke_width == 1 %}
