<div class="kafelki-section">
  <div class="kafelki-wrapper">
    {% for block in section.blocks %}
      <div class="kafelek" {{ block.shopify_attributes }}></div>
    {% endfor %}
  </div>
</div>

<style>
  .kafelki-section {
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    background-color: white;
    padding: 48px 48px;
    margin-top: 48px;
    margin-bottom: 48px;
  }

  .kafelki-wrapper {
    display: flex;
    flex-wrap: nowrap;
    width: 100%;
  }

  .kafelek {
    width: 10px;
    height: 10px;
    background-color: transparent;
    border: 1px solid #0b00b5;
    box-sizing: border-box;
  }
</style>

{% schema %}
{
  "name": "Kafelki",
  "blocks": [
    {
      "type": "kafelek",
      "name": "Kafelek",
      "settings": []
    }
  ],
  "presets": [
    {
      "name": "Kafelki"
    }
  ]
}
{% endschema %}

