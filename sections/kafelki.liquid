<div class="kafelki-section">
  <div class="kafelki-wrapper">
    {% for block in section.blocks %}
      <div class="kafelek" {{ block.shopify_attributes }}>
        {% if block.settings.text %}
          <div class="kafelek-text">{{ block.settings.text }}</div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .kafelki-section {
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    background-color: white;
    padding: 48px 48px;
    margin-top: 48px;
    margin-bottom: 48px;
  }

  .kafelki-wrapper {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 48px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .kafelek {
    aspect-ratio: 1;
    background-color: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
  }

  .kafelek-text {
    font-family: 'Quicksand', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: #1f2937;
    text-align: center;
    padding: 24px;
  }
</style>

{% schema %}
{
  "name": "Kafelki",
  "blocks": [
    {
      "type": "kafelek",
      "name": "Kafelek",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Tekst",
          "default": "Kafelek"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Kafelki"
    }
  ]
}
{% endschema %}

