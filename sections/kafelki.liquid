      background-image: url("data:image/svg+xml;base64,PHN2ZyB3aWR0aD0nMjAnIGhlaWdodD0nMjAnIHhtbG5zPSdodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2Zyc+PGxpbmUgeDE9JzAnIHkxPScwJyB4Mj0nMjAnIHkyPScwJyBzdHJva2U9JyMwYjAwYjUnIHN0cm9rZS13aWR0aD0nMScvPjxsaW5lIHgxPScwJyB5MT0nMCcgeDI9JzAnIHkyPScyMCcgc3Ryb2tlPScjMGIwMGI1JyBzdHJva2Utd2lkdGg9JzEnLz48L3N2Zz4=");
    }
  {% elsif stroke_width == 1.5 %}
    .kafelki-section {
      background-image: url("data:image/svg+xml;base64,PHN2ZyB3aWR0aD0nMjAnIGhlaWdodD0nMjAnIHhtbG5zPSdodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2Zyc+PGxpbmUgeDE9JzAnIHkxPScwJyB4Mj0nMjAnIHkyPScwJyBzdHJva2U9JyMwYjAwYjUnIHN0cm9rZS13aWR0aD0nMS41Jy8+PGxpbmUgeDE9JzAnIHkxPScwJyB4Mj0nMCcgeTI9JzIwJyBzdHJva2U9JyMwYjAwYjUnIHN0cm9rZS13aWR0aD0nMS41Jy8+PC9zdmc+");
