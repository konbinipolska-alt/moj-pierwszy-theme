<div class="category-highlight-section">
  <div class="category-highlight-wrapper">
    {% for block in section.blocks %}
      {% if block.type == 'content_block' %}
        <div class="content-block" 
             style="
               {% if block.settings.background_color %}background-color: {{ block.settings.background_color }};{% endif %}
               padding: {{ block.settings.padding | default: 48 }}px;
             "
             {{ block.shopify_attributes }}>
          <div class="content-block-inner content-position-{{ block.settings.content_position }}">
            {% if block.settings.header != blank %}
              <h2 class="content-header" 
                  style="text-align: {{ block.settings.text_alignment | default: 'left' }};">
                {{ block.settings.header | newline_to_br }}
              </h2>
            {% endif %}
            {% if block.settings.subheader != blank %}
              <p class="content-subheader" 
                 style="text-align: {{ block.settings.text_alignment | default: 'left' }};">
                {{ block.settings.subheader | newline_to_br }}
              </p>
            {% endif %}
            {% if block.settings.button_text != blank %}
              <a href="{{ block.settings.button_link }}" 
                 class="content-button"
                 style="
                   border-radius: {{ block.settings.button_border_radius | default: 0 }}px;
                   {% if block.settings.button_background_color %}background-color: {{ block.settings.button_background_color }};{% endif %}
                   {% if block.settings.button_border_color %}border: 1px solid {{ block.settings.button_border_color }};{% endif %}
                 ">
                {{ block.settings.button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
  .category-highlight-section {
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
    height: {{ section.settings.height | default: 700 }}px;
  }

  .category-highlight-wrapper {
    width: 100%;
    height: 100%;
    padding: {{ section.settings.margins | default: 48 }}px;
    box-sizing: border-box;
    display: flex;
    align-items: stretch;
    position: relative;
  }

  .content-block {
    flex: 0 0 auto;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .content-block-inner {
    display: flex;
    flex-direction: column;
    flex: 1;
    width: 100%;
  }

  .content-position-top {
    justify-content: flex-start;
  }

  .content-position-center {
    justify-content: center;
  }

  .content-position-bottom {
    justify-content: flex-end;
  }

  .content-header {
    font-family: 'Quicksand', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
  }

  .content-subheader {
    font-family: 'Quicksand', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 1.125rem;
    font-weight: 400;
    margin: 0 0 1.5rem 0;
  }

  .content-button {
    display: inline-block;
    padding: 12px 24px;
    font-family: 'Quicksand', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    align-self: flex-start;
  }

  .content-button:hover {
    opacity: 0.9;
  }
</style>

