<div class="category-highlight-section">
  <div class="category-highlight-wrapper">
    {% for block in section.blocks %}
      {% if block.type == 'content_block' %}
        <div class="content-block" 
             style="
               {% if block.settings.background_color %}background-color: {{ block.settings.background_color }};{% endif %}
               padding: {{ block.settings.padding | default: 48 }}px;
               {% if block.settings.width %}width: {{ block.settings.width }}px;{% endif %}
               {% if block.settings.show_border %}border: {{ block.settings.border_width | default: 1 }}px solid {{ block.settings.border_color | default: '#0b00b5' }};{% else %}border: none;{% endif %}
             "
             {{ block.shopify_attributes }}>
          {% if block.settings.background_image %}
            <div class="content-block-media" 
                 style="
                   background-image: url('{{ block.settings.background_image | image_url: width: 1200 }}'); 
                   background-size: {{ block.settings.media_scale | default: 100 }}%; 
                   background-position: {{ block.settings.media_position | default: 'center' }};
                   background-repeat: no-repeat;
                 "></div>
          {% elsif block.settings.background_video %}
            <video class="content-block-media" 
                   style="object-position: {{ block.settings.media_position | default: 'center' }};"
                   autoplay loop muted playsinline>
              <source src="{{ block.settings.background_video }}" type="video/mp4">
            </video>
          {% endif %}
          <div class="content-block-inner content-position-{{ block.settings.content_position }}">
            <div class="content-text-wrapper">
              {% if block.settings.header != blank %}
                <h2 class="content-header" 
                    style="
                      text-align: {{ block.settings.text_alignment | default: 'left' }};
                      color: {{ block.settings.header_color | default: '#0b00b5' }};
                      font-size: {{ block.settings.header_font_size | default: 32 }}px;
                      line-height: {{ block.settings.header_line_height | default: 120 | divided_by: 100.0 }};
                    ">
                  {{ block.settings.header | newline_to_br }}
                </h2>
              {% endif %}
              {% if block.settings.subheader != blank %}
                <p class="content-subheader" 
                   style="
                     text-align: {{ block.settings.text_alignment | default: 'left' }};
                     color: {{ block.settings.subheader_color | default: '#0b00b5' }};
                     font-size: {{ block.settings.subheader_font_size | default: 14 }}px;
                     line-height: {{ block.settings.subheader_line_height | default: 150 | divided_by: 100.0 }};
                   ">
                  {{ block.settings.subheader | newline_to_br }}
                </p>
              {% endif %}
            </div>
            {% if block.settings.button_text != blank %}
              <a href="{{ block.settings.button_link }}" 
                 class="content-button button-position-{{ block.settings.button_position }}"
                 style="
                   border-radius: {{ block.settings.button_border_radius | default: 0 }}px;
                   background-color: {{ block.settings.button_background_color | default: '#0b00b5' }};
                   border: 1px solid {{ block.settings.button_border_color | default: '#0b00b5' }};
                   color: {{ block.settings.button_text_color | default: '#ffffff' }};
                 ">
                {{ block.settings.button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
  .category-highlight-section {
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
    height: {{ section.settings.height | default: 700 }}px;
  }

  .category-highlight-wrapper {
    width: 100%;
    height: 100%;
    padding: {{ section.settings.margins | default: 48 }}px;
    box-sizing: border-box;
    display: flex;
    align-items: stretch;
    position: relative;
  }

  .content-block {
    flex: 0 0 auto;
    height: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
  }

  .content-block-media {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
    pointer-events: none;
  }

  .content-block-media video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .content-block-inner {
    display: flex;
    flex-direction: column;
    flex: 1;
    width: 100%;
    position: relative;
    z-index: 5;
  }

  .content-position-top {
    justify-content: flex-start;
  }

  .content-position-center {
    justify-content: center;
  }

  .content-position-bottom {
    justify-content: flex-end;
  }

  .content-text-wrapper {
    flex: 1;
  }

  .content-header {
    font-family: 'Quicksand', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
  }

  .content-subheader {
    font-family: 'Quicksand', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 1.125rem;
    font-weight: 400;
    margin: 0 0 1.5rem 0;
  }

  .button-position-after {
    margin-top: 0;
  }

  .button-position-bottom {
    margin-top: auto;
  }

  .content-button {
    display: inline-block;
    padding: 12px 24px;
    font-family: 'Quicksand', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    align-self: flex-start;
  }

  .content-button:hover {
    opacity: 0.9;
  }
</style>

