{% comment %}
  Image Slider Section
  Simple horizontal slider with image slides only
  9:16 aspect ratio, 600px height on desktop
{% endcomment %}

<div class="image-slider-section">
  <div class="slider-container">
    {% for block in section.blocks %}
      {% if block.type == 'image_slide' %}
        <div class="slide" {{ block.shopify_attributes }}>
          {% if block.settings.image %}
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="slide-link">
            {% endif %}
            
            <img 
              src="{{ block.settings.image | image_url: width: 800 }}"
              srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
                      {{ block.settings.image | image_url: width: 800 }} 800w"
              sizes="(max-width: 768px) 225px, (max-width: 1024px) 281px, 337px"
              alt="{{ block.settings.alt_text | default: 'Slide image' }}"
              loading="lazy"
              class="slide-image"
            >
            
            {% if block.settings.link != blank %}
              </a>
            {% endif %}
          {% else %}
            <div class="slide-placeholder">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                <circle cx="8.5" cy="8.5" r="1.5"/>
                <polyline points="21 15 16 10 5 21"/>
              </svg>
              <p>No image selected</p>
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
  .image-slider-section {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    margin-top: 80px;
    padding: 0 48px;
  }

  .slider-container {
    display: flex;
    gap: 12px;
    overflow-x: auto;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .slider-container::-webkit-scrollbar {
    display: none;
  }

  .slide {
    flex: 0 0 auto;
    width: 337.5px;
    height: 600px;
    border-radius: 8px;
    overflow: hidden;
    background-color: #eeeeee;
    position: relative;
  }

  .slide-link {
    display: block;
    width: 100%;
    height: 100%;
  }

  .slide-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  .slide-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #999;
    gap: 12px;
  }

  .slide-placeholder svg {
    opacity: 0.5;
  }

  .slide-placeholder p {
    font-size: 14px;
    margin: 0;
  }

  /* Tablet */
  @media (max-width: 1024px) {
    .image-slider-section {
      margin-top: 64px;
      padding: 0 32px;
    }

    .slide {
      width: 281.25px;
      height: 500px;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .image-slider-section {
      margin-top: 48px;
      padding: 0 20px;
    }

    .slide {
      width: 225px;
      height: 400px;
    }
  }
</style>

{% schema %}
{
  "name": "Image Slider",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "type": "image_slide",
      "name": "Image Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt text",
          "default": "Slide image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Slider",
      "blocks": [
        {
          "type": "image_slide"
        },
        {
          "type": "image_slide"
        },
        {
          "type": "image_slide"
        }
      ]
    }
  ]
}
{% endschema %}

