<footer class="user-footer" 
        style="
          background-color: {{ section.settings.bg_color | default: '#ffffff' }};
          color: {{ section.settings.text_color | default: '#0b00b5' }};
          padding-top: {{ section.settings.padding_top | default: 48 }}px;
          padding-bottom: {{ section.settings.padding_bottom | default: 48 }}px;
          padding-left: {{ section.settings.padding_left | default: 48 }}px;
          padding-right: {{ section.settings.padding_right | default: 48 }}px;
          margin-top: {{ section.settings.margin_top | default: 0 }}px;
          margin-bottom: {{ section.settings.margin_bottom | default: 0 }}px;
        ">
  <div class="user-footer__container" style="max-width: {{ section.settings.max_width | default: 1200 }}px; margin: 0 auto;">
    <div class="user-footer__grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: {{ section.settings.column_gap | default: 32 }}px;">
      {% for block in section.blocks %}
        <div class="user-footer__column" {{ block.shopify_attributes }}
             style="
               text-align: {{ block.settings.text_alignment | default: 'left' }};
               {% if block.settings.column_width %}width: {{ block.settings.column_width }}px;{% endif %}
             ">
          
          {% case block.type %}
            {% when 'menu' %}
              {% if block.settings.menu and block.settings.menu.links.size > 0 %}
                {% if block.settings.heading != blank %}
                  <h3 class="user-footer__heading" style="
                    font-size: {{ block.settings.heading_size | default: 18 }}px;
                    font-weight: {{ block.settings.heading_weight | default: 600 }};
                    margin-top: 0;
                    margin-bottom: {{ block.settings.heading_spacing | default: 16 }}px;
                    color: {{ block.settings.heading_color | default: section.settings.text_color | default: '#0b00b5' }};
                  ">{{ block.settings.heading }}</h3>
                {% endif %}
                <ul class="user-footer__menu" style="list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: {{ block.settings.menu_item_gap | default: 8 }}px;">
                  {% for link in block.settings.menu.links %}
                    <li>
                      <a href="{{ link.url }}" style="
                        color: {{ block.settings.link_color | default: section.settings.text_color | default: '#0b00b5' }};
                        text-decoration: none;
                        font-size: {{ block.settings.link_size | default: 14 }}px;
                        transition: opacity 0.2s;
                      " onmouseover="this.style.opacity='0.7'" onmouseout="this.style.opacity='1'">
                        {{ link.title }}
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}

            {% when 'text' %}
              {% if block.settings.heading != blank %}
                <h3 class="user-footer__heading" style="
                  font-size: {{ block.settings.heading_size | default: 18 }}px;
                  font-weight: {{ block.settings.heading_weight | default: 600 }};
                  margin-top: 0;
                  margin-bottom: {{ block.settings.heading_spacing | default: 16 }}px;
                  color: {{ block.settings.heading_color | default: section.settings.text_color | default: '#0b00b5' }};
                ">{{ block.settings.heading }}</h3>
              {% endif %}
              {% if block.settings.text != blank %}
                <div class="user-footer__text" style="
                  font-size: {{ block.settings.text_size | default: 14 }}px;
                  line-height: {{ block.settings.text_line_height | default: 1.6 }};
                  color: {{ block.settings.text_color | default: section.settings.text_color | default: '#0b00b5' }};
                  margin-bottom: {{ block.settings.text_spacing | default: 16 }}px;
                ">{{ block.settings.text }}</div>
              {% endif %}

            {% when 'logo' %}
              {% if block.settings.logo %}
                <div class="user-footer__logo" style="margin-bottom: {{ block.settings.logo_spacing | default: 16 }}px;">
                  {% if block.settings.logo_link != blank %}
                    <a href="{{ block.settings.logo_link }}" style="display: inline-block;">
                  {% endif %}
                  <img src="{{ block.settings.logo | image_url: width: block.settings.logo_width | default: 180 }}" 
                       alt="{{ shop.name }}" 
                       style="max-width: {{ block.settings.logo_width | default: 180 }}px; height: auto;">
                  {% if block.settings.logo_link != blank %}
                    </a>
                  {% endif %}
                </div>
              {% endif %}

            {% when 'social' %}
              {% if block.settings.heading != blank %}
                <h3 class="user-footer__heading" style="
                  font-size: {{ block.settings.heading_size | default: 18 }}px;
                  font-weight: {{ block.settings.heading_weight | default: 600 }};
                  margin-top: 0;
                  margin-bottom: {{ block.settings.heading_spacing | default: 16 }}px;
                  color: {{ block.settings.heading_color | default: section.settings.text_color | default: '#0b00b5' }};
                ">{{ block.settings.heading }}</h3>
              {% endif %}
              <div class="user-footer__social" style="display: flex; gap: {{ block.settings.social_gap | default: 12 }}px; flex-wrap: wrap;">
                {% if block.settings.facebook != blank %}
                  <a href="{{ block.settings.facebook }}" target="_blank" rel="noopener noreferrer" style="
                    display: inline-flex;
                    align-items: center;
                    justify-content: center;
                    width: {{ block.settings.social_icon_size | default: 36 }}px;
                    height: {{ block.settings.social_icon_size | default: 36 }}px;
                    border-radius: 50%;
                    background-color: {{ block.settings.social_bg_color | default: 'transparent' }};
                    color: {{ block.settings.social_icon_color | default: section.settings.text_color | default: '#0b00b5' }};
                    text-decoration: none;
                    transition: opacity 0.2s;
                  " onmouseover="this.style.opacity='0.7'" onmouseout="this.style.opacity='1'">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                    </svg>
                  </a>
                {% endif %}
                {% if block.settings.instagram != blank %}
                  <a href="{{ block.settings.instagram }}" target="_blank" rel="noopener noreferrer" style="
                    display: inline-flex;
                    align-items: center;
                    justify-content: center;
                    width: {{ block.settings.social_icon_size | default: 36 }}px;
                    height: {{ block.settings.social_icon_size | default: 36 }}px;
                    border-radius: 50%;
                    background-color: {{ block.settings.social_bg_color | default: 'transparent' }};
                    color: {{ block.settings.social_icon_color | default: section.settings.text_color | default: '#0b00b5' }};
                    text-decoration: none;
                    transition: opacity 0.2s;
                  " onmouseover="this.style.opacity='0.7'" onmouseout="this.style.opacity='1'">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                      <rect x="2" y="2" width="20" height="20" rx="5" ry="5" stroke="currentColor" stroke-width="2" fill="none"/>
                      <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                      <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" stroke="currentColor" stroke-width="2"/>
                    </svg>
                  </a>
                {% endif %}
                {% if block.settings.twitter != blank %}
                  <a href="{{ block.settings.twitter }}" target="_blank" rel="noopener noreferrer" style="
                    display: inline-flex;
                    align-items: center;
                    justify-content: center;
                    width: {{ block.settings.social_icon_size | default: 36 }}px;
                    height: {{ block.settings.social_icon_size | default: 36 }}px;
                    border-radius: 50%;
                    background-color: {{ block.settings.social_bg_color | default: 'transparent' }};
                    color: {{ block.settings.social_icon_color | default: section.settings.text_color | default: '#0b00b5' }};
                    text-decoration: none;
                    transition: opacity 0.2s;
                  " onmouseover="this.style.opacity='0.7'" onmouseout="this.style.opacity='1'">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
                    </svg>
                  </a>
                {% endif %}
              </div>

            {% when 'newsletter' %}
              {% if block.settings.heading != blank %}
                <h3 class="user-footer__heading" style="
                  font-size: {{ block.settings.heading_size | default: 18 }}px;
                  font-weight: {{ block.settings.heading_weight | default: 600 }};
                  margin-top: 0;
                  margin-bottom: {{ block.settings.heading_spacing | default: 16 }}px;
                  color: {{ block.settings.heading_color | default: section.settings.text_color | default: '#0b00b5' }};
                ">{{ block.settings.heading }}</h3>
              {% endif %}
              {% if block.settings.text != blank %}
