                  font-size: {{ block.settings.text_size | default: 14 }}px;
                  line-height: {{ block.settings.text_line_height | default: 1.6 }};
                  color: {{ block.settings.text_color | default: section.settings.text_color | default: '#0b00b5' }};
                  margin-bottom: {{ block.settings.text_spacing | default: 16 }}px;
                ">{{ block.settings.text }}</div>
              {% endif %}
              {% form 'customer', class: 'user-footer__newsletter-form' %}
                <div style="display: flex; gap: 8px; flex-wrap: wrap;">
                  <input type="email" 
                         name="contact[email]" 
                         placeholder="{{ block.settings.placeholder | default: 'Twój email' }}"
                         required
                         style="
                           flex: 1;
                           min-width: 200px;
                           padding: {{ block.settings.input_padding | default: 12 }}px;
                           border: 1px solid {{ block.settings.input_border_color | default: '#e5e7eb' }};
                           border-radius: {{ block.settings.input_border_radius | default: 6 }}px;
                           font-size: {{ block.settings.input_font_size | default: 14 }}px;
                         ">
                  <button type="submit" style="
                    padding: {{ block.settings.button_padding | default: 12 }}px {{ block.settings.button_padding_horizontal | default: 24 }}px;
                    background-color: {{ block.settings.button_bg_color | default: section.settings.text_color | default: '#0b00b5' }};
                    color: {{ block.settings.button_text_color | default: '#ffffff' }};
                    border: none;
                    border-radius: {{ block.settings.button_border_radius | default: 6 }}px;
                    font-size: {{ block.settings.button_font_size | default: 14 }}px;
                    font-weight: {{ block.settings.button_font_weight | default: 600 }};
                    cursor: pointer;
                    transition: opacity 0.2s;
                  " onmouseover="this.style.opacity='0.9'" onmouseout="this.style.opacity='1'">
                    {{ block.settings.button_text | default: 'Zapisz się' }}
                  </button>
                </div>
              {% endform %}

            {% when 'copyright' %}
              <div class="user-footer__copyright" style="
                font-size: {{ block.settings.font_size | default: 12 }}px;
                color: {{ block.settings.text_color | default: section.settings.text_color | default: '#0b00b5' }};
                opacity: {{ block.settings.opacity | default: 0.7 }};
              ">
                &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}
                {% if block.settings.show_powered_by %}
                  , {{ powered_by_link }}
                {% endif %}
              </div>

            {% when 'payment' %}
              {% if block.settings.heading != blank %}
                <h3 class="user-footer__heading" style="
                  font-size: {{ block.settings.heading_size | default: 18 }}px;
                  font-weight: {{ block.settings.heading_weight | default: 600 }};
                  margin-top: 0;
                  margin-bottom: {{ block.settings.heading_spacing | default: 16 }}px;
                  color: {{ block.settings.heading_color | default: section.settings.text_color | default: '#0b00b5' }};
                ">{{ block.settings.heading }}</h3>
              {% endif %}
              <div class="user-footer__payment" style="display: flex; flex-wrap: wrap; gap: {{ block.settings.icon_gap | default: 8 }}px;">
                {% for type in shop.enabled_payment_types %}
                  <div style="
                    width: {{ block.settings.icon_size | default: 40 }}px;
                    height: {{ block.settings.icon_size | default: 40 }}px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                  ">
                    {{ type | payment_type_svg_tag: class: 'user-footer__payment-icon' }}
                  </div>
                {% endfor %}
              </div>
          {% endcase %}
        </div>
      {% endfor %}
    </div>
  </div>
</footer>

{% stylesheet %}
  .user-footer {
    width: 100%;
  }
  
  .user-footer a {
    transition: opacity 0.2s;
  }
  
  .user-footer__payment-icon {
    width: 100%;
    height: 100%;
  }
  
  @media (max-width: 768px) {
    .user-footer__grid {
      grid-template-columns: 1fr !important;
    }
    
    .user-footer {
      padding-left: 24px !important;
      padding-right: 24px !important;
      padding-top: 32px !important;
      padding-bottom: 32px !important;
    }
  }
{% endstylesheet %}

