                <input type="email" 
                       name="contact[email]" 
                       placeholder="{{ block.settings.placeholder | default: 'Twój email' }}"
                       required
                       style="
                         flex: 1;
                         min-width: 200px;
                         padding: {{ block.settings.input_padding | default: 12 }}px;
                         border: 1px solid {{ block.settings.input_border_color | default: '#e5e7eb' }};
                         border-radius: {{ block.settings.input_border_radius | default: 6 }}px;
                         font-size: {{ block.settings.input_font_size | default: 14 }}px;
                       ">
                <button type="submit" style="
                  padding: {{ block.settings.button_padding | default: 12 }}px {{ block.settings.button_padding_horizontal | default: 24 }}px;
                  background-color: {{ block.settings.button_bg_color | default: section.settings.text_color | default: '#0b00b5' }};
                  color: {{ block.settings.button_text_color | default: '#ffffff' }};
                  border: none;
                  border-radius: {{ block.settings.button_border_radius | default: 6 }}px;
                  font-size: {{ block.settings.button_font_size | default: 14 }}px;
                  font-weight: {{ block.settings.button_font_weight | default: 600 }};
                  cursor: pointer;
                  transition: opacity 0.2s;
                " onmouseover="this.style.opacity='0.9'" onmouseout="this.style.opacity='1'">
                  {{ block.settings.button_text | default: 'Zapisz się' }}
                </button>
              </div>
            {% endform %}

          {% when 'copyright' %}
            <div class="user-footer__copyright" style="
              font-size: {{ block.settings.font_size | default: 12 }}px;
              color: {{ block.settings.text_color | default: section.settings.text_color | default: '#0b00b5' }};
              opacity: {{ block.settings.opacity | default: 0.7 }};
            ">
              &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}
              {% if block.settings.show_powered_by %}
