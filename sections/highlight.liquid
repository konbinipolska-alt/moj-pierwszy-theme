<div class="highlight-section">
  <div class="highlight-wrapper">
    {% for block in section.blocks %}
      <div class="highlight-block" style="background-color: {{ block.settings.block_color | default: 'white' }};" {{ block.shopify_attributes }}>
        {% if block.settings.show_lines %}
          <div class="vertical-line vertical-line-left"></div>
        {% endif %}
        {% if block.settings.text %}
          <div class="highlight-block-text" style="color: {{ block.settings.text_color | default: 'black' }};">{{ block.settings.text }}</div>
        {% endif %}
        {% if block.settings.show_lines %}
          <div class="vertical-line vertical-line-right"></div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .highlight-section {
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    background-color: {{ section.settings.background_color | default: '#0b00b5' }};
    height: {{ section.settings.height | default: 700 }}px;
  }

  .highlight-wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    gap: 48px;
    box-sizing: border-box;
    padding: 48px 48px 48px 48px;
  }

  .highlight-block {
    flex: 1;
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .vertical-line {
    position: absolute;
    width: 2px;
    background-color: white;
    height: 100%;
    top: 0;
  }

  .vertical-line-left {
    left: 25%;
  }

  .vertical-line-right {
    right: 25%;
  }

  .highlight-block-text {
    font-family: 'Noto Sans JP', 'Hiragino Sans', 'Hiragino Kaku Gothic ProN', Meiryo, sans-serif;
    writing-mode: vertical-lr;
    text-orientation: upright;
    font-weight: bold;
    white-space: nowrap;
    font-size: calc(({{ section.settings.height | default: 700 }}px - 96px) * 0.33);
  }
</style>

{% schema %}
{
  "name": "Highlight",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Kolor tła",
      "default": "#0b00b5"
    },
    {
      "type": "number",
      "id": "height",
      "label": "Wysokość (px)",
      "default": 700
    }
  ],
  "blocks": [
    {
      "type": "sub_section",
      "name": "Sub-sekcja",
      "settings": [
        {
          "type": "color",
          "id": "block_color",
          "label": "Kolor bloku",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Kolor tekstu",
          "default": "#000000"
        },
        {
          "type": "checkbox",
          "id": "show_lines",
          "label": "Pokaż pionowe linie",
          "default": true
        },
        {
          "type": "text",
          "id": "text",
          "label": "Tekst",
          "default": "日本語"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Highlight"
    }
  ]
}
{% endschema %}
