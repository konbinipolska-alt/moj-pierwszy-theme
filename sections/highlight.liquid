<div class="highlight-section">
  <div class="highlight-wrapper">
    {% for block in section.blocks %}
      <div class="highlight-block" {{ block.shopify_attributes }}>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .highlight-section {
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    background-color: {{ section.settings.background_color | default: '#0b00b5' }};
    margin-top: 48px;
    margin-bottom: 48px;
    height: {{ section.settings.height | default: 700 }}px;
  }

  .highlight-wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    padding: 48px;
    gap: 48px;
    box-sizing: border-box;
  }

  .highlight-block {
    flex: 1;
    background-color: white;
  }
</style>

{% schema %}
{
  "name": "Highlight",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Kolor tła",
      "default": "#0b00b5"
    },
    {
      "type": "number",
      "id": "height",
      "label": "Wysokość (px)",
      "default": 700
    }
  ],
  "blocks": [
    {
      "type": "sub_section",
      "name": "Sub-sekcja",
      "settings": []
    }
  ],
  "presets": [
    {
      "name": "Highlight"
    }
  ]
}
{% endschema %}
