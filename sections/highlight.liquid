<div class="highlight-section">
  <div class="highlight-wrapper">
    {% if section.settings.overlay_image %}
      <div class="highlight-overlay-image image-{{ section.settings.image_position }}">
        <img 
          src="{{ section.settings.overlay_image | image_url: width: 1200 }}" 
          alt="{{ section.settings.overlay_image.alt | escape }}"
          class="overlay-image"
          style="height: {{ section.settings.image_size }}%;"
        />
      </div>
    {% endif %}
    {% for block in section.blocks %}
      <div class="highlight-block" style="background-color: {{ block.settings.block_color | default: 'white' }};" {{ block.shopify_attributes }}>
        {% if block.settings.show_lines %}
          <div class="vertical-line vertical-line-left" style="background-color: {{ block.settings.line_color | default: 'white' }}; left: {{ block.settings.line_offset | default: 25 }}%; width: {{ block.settings.line_width | default: 2 }}px;"></div>
        {% endif %}
        {% if block.settings.text %}
          <div class="highlight-block-text" style="color: {{ block.settings.text_color | default: 'black' }};">{{ block.settings.text }}</div>
        {% endif %}
        {% if block.settings.show_lines %}
          <div class="vertical-line vertical-line-right" style="background-color: {{ block.settings.line_color | default: 'white' }}; right: {{ block.settings.line_offset | default: 25 }}%; width: {{ block.settings.line_width | default: 2 }}px;"></div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .highlight-section {
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    background-color: {{ section.settings.background_color | default: '#0b00b5' }};
    height: {{ section.settings.height | default: 700 }}px;
  }

  .highlight-wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    gap: 48px;
    box-sizing: border-box;
    padding: 48px 48px 48px 48px;
    position: relative;
  }

  .highlight-overlay-image {
    position: absolute;
    width: calc(100% - 96px);
    height: calc(100% - 96px);
    top: 48px;
    left: 48px;
    display: flex;
  }

  .overlay-image {
    width: auto;
    object-fit: contain;
  }

  .image-left-top .overlay-image {
    align-self: flex-start;
    justify-self: flex-start;
  }

  .image-left-center .overlay-image {
    align-self: center;
    justify-self: flex-start;
  }

  .image-left-bottom .overlay-image {
    align-self: flex-end;
    justify-self: flex-start;
  }

  .image-center-top .overlay-image {
    align-self: flex-start;
    margin-left: auto;
    margin-right: auto;
  }

  .image-center-center .overlay-image {
    align-self: center;
    margin-left: auto;
    margin-right: auto;
  }

  .image-center-bottom .overlay-image {
    align-self: flex-end;
    margin-left: auto;
    margin-right: auto;
  }

  .image-right-top .overlay-image {
    align-self: flex-start;
    margin-left: auto;
  }

  .image-right-center .overlay-image {
    align-self: center;
    margin-left: auto;
  }

  .image-right-bottom .overlay-image {
    align-self: flex-end;
    margin-left: auto;
  }

  .highlight-block {
    flex: 1;
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .vertical-line {
    position: absolute;
    width: 2px;
    background-color: white;
    height: 100%;
    top: 0;
  }


  .highlight-block-text {
    font-family: 'Quicksand', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    writing-mode: vertical-lr;
    text-orientation: upright;
    font-weight: bold;
    white-space: nowrap;
    font-size: calc(({{ section.settings.height | default: 700 }}px - 96px) * 0.33);
  }
</style>

{% schema %}
{
  "name": "Highlight",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Kolor tła",
      "default": "#0b00b5"
    },
    {
      "type": "number",
      "id": "height",
      "label": "Wysokość (px)",
      "default": 700
    },
    {
      "type": "image_picker",
      "id": "overlay_image",
      "label": "Zdjęcie nad blokami"
    },
    {
      "type": "range",
      "id": "image_size",
      "label": "Wielkość zdjęcia (%)",
      "min": 10,
      "max": 100,
      "step": 5,
      "default": 50,
      "unit": "%"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Pozycja zdjęcia",
      "options": [
        {
          "value": "left-top",
          "label": "Lewa góra"
        },
        {
          "value": "left-center",
          "label": "Lewa środek"
        },
        {
          "value": "left-bottom",
          "label": "Lewa dół"
        },
        {
          "value": "center-top",
          "label": "Środek góra"
        },
        {
          "value": "center-center",
          "label": "Środek środek"
        },
        {
          "value": "center-bottom",
          "label": "Środek dół"
        },
        {
          "value": "right-top",
          "label": "Prawa góra"
        },
        {
          "value": "right-center",
          "label": "Prawa środek"
        },
        {
          "value": "right-bottom",
          "label": "Prawa dół"
        }
      ],
      "default": "center-center"
    }
  ],
  "blocks": [
    {
      "type": "sub_section",
      "name": "Sub-sekcja",
      "settings": [
        {
          "type": "color",
          "id": "block_color",
          "label": "Kolor bloku",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Kolor tekstu",
          "default": "#000000"
        },
        {
          "type": "checkbox",
          "id": "show_lines",
          "label": "Pokaż pionowe linie",
          "default": true
        },
        {
          "type": "color",
          "id": "line_color",
          "label": "Kolor linii",
          "default": "#ffffff"
        },
        {
          "type": "range",
          "id": "line_offset",
          "label": "Odstęp linii od krawędzi (%)",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 25,
          "unit": "%"
        },
        {
          "type": "range",
          "id": "line_width",
          "label": "Grubość linii (px)",
          "min": 1,
          "max": 10,
          "step": 1,
          "default": 2,
          "unit": "px"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Tekst",
          "default": "日本語"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Highlight"
    }
  ]
}
{% endschema %}
