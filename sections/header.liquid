<script>
  (function() {
    const header = document.getElementById('main-navigation');
    if (!header) return;

    function handleScroll() {
      if (window.scrollY > 0) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    }

    // Check initial scroll position
    handleScroll();

    // Listen for scroll events
    window.addEventListener('scroll', handleScroll, { passive: true });

    const dropdownToggles = header.querySelectorAll('.nav-item.dropdown .dropdown-toggle');
    dropdownToggles.forEach((toggle) => {
      toggle.addEventListener('click', (event) => {
        event.preventDefault();
        const parent = toggle.closest('.dropdown');
        if (parent) {
          parent.classList.toggle('open');
        }
      });
    });

    document.addEventListener('click', (event) => {
      if (!header.contains(event.target)) {
        header.querySelectorAll('.nav-item.dropdown.open').forEach((dropdown) => dropdown.classList.remove('open'));
      }
    });

    const cartButtons = header.querySelectorAll('[data-cart-trigger]');
    cartButtons.forEach((btn) => {
      const badge = btn.querySelector('[data-cart-badge]');
      if (badge) {
        const badgeSize = parseFloat(badge.dataset.badgeSize) || 20;
        badge.style.setProperty('--badge-size', badgeSize + 'px');
      }
      btn.addEventListener('click', (event) => {
        event.preventDefault();
        if (window.Shopify && Shopify.theme && Shopify.theme.cartDrawer && typeof Shopify.theme.cartDrawer.open === 'function') {
          Shopify.theme.cartDrawer.open();
        } else if (window.Shopify && Shopify.theme && Shopify.theme.cart && typeof Shopify.theme.cart.openDrawer === 'function') {
          Shopify.theme.cart.openDrawer();
        } else if (window.toggleCartDrawer && typeof window.toggleCartDrawer === 'function') {
          window.toggleCartDrawer();
        } else {
          const toggleButton = document.querySelector('[data-cart-drawer-toggle], [data-drawer-toggle="cart"], .js-drawer-open-cart');
          if (toggleButton) {
            toggleButton.click();
          } else {
            window.location.href = "{{ routes.cart_url }}";
          }
        }
      });
    });

    function updateCartBadge(count) {
      const value = parseInt(count, 10) || 0;
      const badges = header.querySelectorAll('[data-cart-badge]');
      badges.forEach((badge) => {
        badge.textContent = value;
        if (value > 0) {
          badge.classList.add('cart-badge--active');
          if (String(value).length >= 2) {
            badge.classList.add('cart-badge--wide');
          } else {
            badge.classList.remove('cart-badge--wide');
          }
        } else {
          badge.classList.remove('cart-badge--active', 'cart-badge--wide');
        }
      });
    }

    const initialCount = {{ cart.item_count }};
    updateCartBadge(initialCount);

    const badgeUpdateEvents = ['cart:updated', 'cart:change', 'cart:refresh', 'cart:drawer-updated'];
    badgeUpdateEvents.forEach((eventName) => {
      document.addEventListener(eventName, (event) => {
        if (event && event.detail && typeof event.detail.item_count !== 'undefined') {
          updateCartBadge(event.detail.item_count);
        } else if (event && typeof event.item_count !== 'undefined') {
          updateCartBadge(event.item_count);
        }
      });
    });
  })();
</script>
