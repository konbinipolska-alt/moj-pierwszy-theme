{% comment %}
  Modular Slider Section
  4 types of slides x 3 sizes = 12 slide types
  Types: image, text, video, product
  Sizes: small (9:16), medium (2x+12px), large (3x+24px)
{% endcomment %}

<div class="modular-slider-section">
  <div class="slider-container">
    <div class="slider-wrapper">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'image_small' %}
            {% render 'slide-image-small', block: block %}
          {% when 'image_medium' %}
            {% render 'slide-image-medium', block: block %}
          {% when 'image_large' %}
            {% render 'slide-image-large', block: block %}
          {% when 'text_small' %}
            {% render 'slide-text-small', block: block %}
          {% when 'text_medium' %}
            {% render 'slide-text-medium', block: block %}
          {% when 'text_large' %}
            {% render 'slide-text-large', block: block %}
          {% when 'video_small' %}
            {% render 'slide-video-small', block: block %}
          {% when 'video_medium' %}
            {% render 'slide-video-medium', block: block %}
          {% when 'video_large' %}
            {% render 'slide-video-large', block: block %}
          {% when 'product_small' %}
            {% render 'slide-product-small', block: block %}
          {% when 'product_medium' %}
            {% render 'slide-product-medium', block: block %}
          {% when 'product_large' %}
            {% render 'slide-product-large', block: block %}
        {% endcase %}
      {% endfor %}
    </div>

    {% if section.blocks.size > 1 %}
      <!-- Navigation arrows -->
      <button class="slider-arrow slider-arrow--prev" aria-label="Previous slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      <button class="slider-arrow slider-arrow--next" aria-label="Next slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  /* Modular Slider Styles */
  .modular-slider-section {
    position: relative;
    margin-top: 80px;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
  }

  .slider-container {
    position: relative;
    width: calc(100vw - 96px);
    margin: 0 48px;
    height: 600px;
    overflow: hidden;
    border-radius: 8px;
  }

  .slider-wrapper {
    display: flex;
    height: 100%;
    width: max-content;
    gap: 12px; /* This controls spacing between slides */
    transition: transform 0.4s ease-in-out;
  }

  /* Slide size classes */
  .slide-small {
    width: calc((600px * 9) / 16); /* 9:16 aspect ratio = 337.5px */
    height: 600px;
    flex-shrink: 0;
    position: relative;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .slide-medium {
    width: calc(((600px * 9) / 16) * 2 + 12px); /* 2x small + gap = 687px */
    height: 600px;
    flex-shrink: 0;
    position: relative;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .slide-large {
    width: calc(((600px * 9) / 16) * 3 + 24px); /* 3x small + gaps = 1036.5px */
    height: 600px;
    flex-shrink: 0;
    position: relative;
    border-radius: 8px;
    overflow: hidden;
  }

  /* Navigation arrows */
  .slider-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.9);
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #333;
    transition: all 0.3s ease;
    z-index: 10;
  }

  .slider-arrow:hover {
    background: rgba(255, 255, 255, 1);
    transform: translateY(-50%) scale(1.1);
  }

  .slider-arrow--prev {
    left: 16px;
  }

  .slider-arrow--next {
    right: 16px;
  }

  /* Tablet responsive */
  @media (max-width: 1024px) {
    .slider-container {
      width: calc(100vw - 64px);
      margin: 0 32px;
      height: 500px;
    }
    
    .slide-small {
      width: calc((500px * 9) / 16); /* 281.25px */
      height: 500px;
    }
    
    .slide-medium {
      width: calc(((500px * 9) / 16) * 2 + 12px); /* 574.5px */
      height: 500px;
    }
    
    .slide-large {
      width: calc(((500px * 9) / 16) * 3 + 24px); /* 867.75px */
      height: 500px;
    }
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .slider-container {
      width: calc(100vw - 40px);
      margin: 0 20px;
      height: 400px;
    }
    
    .slide-small {
      width: calc((400px * 9) / 16); /* 225px */
      height: 400px;
    }
    
    .slide-medium {
      width: calc(((400px * 9) / 16) * 2 + 12px); /* 462px */
      height: 400px;
    }
    
    .slide-large {
      width: calc(((400px * 9) / 16) * 3 + 24px); /* 699px */
      height: 400px;
    }
    
    .slider-arrow {
      width: 40px;
      height: 40px;
    }
  }
{% endstylesheet %}

{% javascript %}
  /**
   * Modular Slider Class
   * Handles navigation for modular slider with different slide sizes
   */
  class ModularSlider {
    constructor(container) {
      this.container = container;
      this.sliderWrapper = container.querySelector('.slider-wrapper');
      this.slides = container.querySelectorAll('.slide-small, .slide-medium, .slide-large');
      this.prevArrow = container.querySelector('.slider-arrow--prev');
      this.nextArrow = container.querySelector('.slider-arrow--next');

      this.currentIndex = 0;
      this.isTransitioning = false;

      if (this.slides.length <= 1) return;

      this.bindEvents();
      this.updateSlider();
    }

    /**
     * Bind event listeners to navigation arrows
     */
    bindEvents() {
      if (this.prevArrow) {
        this.prevArrow.addEventListener('click', () => this.prevSlide());
      }
      if (this.nextArrow) {
        this.nextArrow.addEventListener('click', () => this.nextSlide());
      }
    }

    /**
     * Move to next slide using modulo for infinite loop
     */
    nextSlide() {
      if (this.isTransitioning) return;
      
      this.isTransitioning = true;
      this.currentIndex = (this.currentIndex + 1) % this.slides.length;
      this.updateSlider();
      
      setTimeout(() => {
        this.isTransitioning = false;
      }, 400);
    }

    /**
     * Move to previous slide using modulo for infinite loop
     */
    prevSlide() {
      if (this.isTransitioning) return;
      
      this.isTransitioning = true;
      this.currentIndex = (this.currentIndex - 1 + this.slides.length) % this.slides.length;
      this.updateSlider();
      
      setTimeout(() => {
        this.isTransitioning = false;
      }, 400);
    }

    /**
     * Update slider position based on current index
     * Calculates offset by summing widths of previous slides + gaps
     */
    updateSlider() {
      let offset = 0;
      for (let i = 0; i < this.currentIndex; i++) {
        const slideWidth = this.slides[i].offsetWidth;
        const gap = 12; // Gap between slides
        offset += slideWidth + gap;
      }
      this.sliderWrapper.style.transform = `translateX(-${offset}px)`;
    }
  }

  /**
   * Initialize all modular sliders on the page
   */
  function initModularSliders() {
    const sliders = document.querySelectorAll('.modular-slider-section');
    sliders.forEach(slider => new ModularSlider(slider));
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initModularSliders);
  } else {
    initModularSliders();
  }
{% endjavascript %}

