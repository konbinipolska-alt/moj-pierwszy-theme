{% comment %}
  Content Section
  White background, 600px height, 48px side margins
{% endcomment %}

<div class="content-section">
  <div class="content-container">
    <div class="content-wrapper">
      {% if section.settings.heading != blank %}
        <h2 class="content-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.text != blank %}
        <div class="content-text">
          {{ section.settings.text }}
        </div>
      {% endif %}
      
      {% comment %} Placeholder content when no settings are configured {% endcomment %}
      {% if section.settings.heading == blank and section.settings.text == blank %}
        <div class="content-placeholder">
          <h2 class="content-heading">Content Section</h2>
          <div class="content-text">
            <p>Add your content here using the Theme Editor.</p>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% stylesheet %}
  .content-section {
    background-color: white;
    min-height: 600px;
    width: 100%;
    padding: 0;
    margin: 0;
  }

  .content-container {
    width: 100%;
    padding: 0 48px;
    height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .content-wrapper {
    width: 100%;
    max-width: 1200px;
    text-align: center;
  }

  .content-heading {
    font-family: 'Quicksand', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--color-primary);
    margin: 0 0 1.5rem 0;
    line-height: 1.2;
  }

  .content-text {
    font-family: 'Quicksand', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 1.125rem;
    font-weight: 400;
    color: #374151;
    line-height: 1.6;
    max-width: 800px;
    margin: 0 auto;
  }

  .content-text p {
    margin: 0 0 1rem 0;
  }

  .content-text p:last-child {
    margin-bottom: 0;
  }

  .content-placeholder {
    opacity: 0.7;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .content-container {
      padding: 0 24px;
      height: 800px;
    }

    .content-heading {
      font-size: 2rem;
    }

    .content-text {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .content-container {
      padding: 0 16px;
      height: 700px;
    }

    .content-heading {
      font-size: 1.75rem;
    }

    .content-text {
      font-size: 0.9rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Content Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "info": "Main heading for the section"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text content",
      "info": "Main text content for the section"
    }
  ],
  "presets": [
    {
      "name": "Content Section",
      "settings": {
        "heading": "Welcome to Our Store",
        "text": "<p>Discover amazing products and exceptional quality. We're here to provide you with the best shopping experience.</p>"
      }
    }
  ]
}
{% endschema %}
